        "$.body[*].id": {
          "regex": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        },
        "$.body[*].author": {
          "match": "type"
        },
        "$.body[*].bestSeller": {
          "match": "type"
        }
      }
    }
  } ],
  "metadata" : {
    "pact-specification" : {
      "version" : "2.0.0"
    },
    "pact-jvm" : {
      "version" : "3.1.1"
    }
  }
}
